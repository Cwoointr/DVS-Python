-------------------------------------------////	Ignore all key-down events, but close the dialog box.voidStSplashDialogHandler::EventKeyDown ( 		const EventRecord& /* inMacEvent */ ){	ListenToMessage ( cmd_Close, nil );}#pragma mark -#pragma mark === CHANGE HISTORY/*=======================================================================================CHANGE HISTORY :		95.11.08		rtm	Initial creation of file=======================================================================================*/